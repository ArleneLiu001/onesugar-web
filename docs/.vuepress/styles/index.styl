@import "./home.styl"
.base
    border-top: 1px solid #eaecef;
    padding: 1.2rem 0;
    margin-top: 2.5rem;
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    align-content: stretch;
    justify-content: space-between;
    .item
        height: 50px;
        padding: 20px 40px;
        border: 1px solid #eaeefb; 
        justify-items: center;
        line-height: 50px;
        color: #1f2f3d;
        cursor: pointer;
        border-radius: 5px;
        transition: 0.3s;
        margin-bottom:20px
    .item:hover{
         transform :scale(1.1)
        }
        
 .part
   display flex
   justify-content:space-between
   padding:10px 0
   border-top: 1px solid #eaecef;
   flex-wrap: wrap;
   .hot
     flex 1
     margin:0
     .item
        display flex
        height: 40px
        line-height: 40px
        cursor: pointer
        border-bottom: 1px solid #eaecef
        justify-content:space-between
        padding-right 20px
        .date-info
          color: rgba(0, 0, 0, 0.45)
   .person-info
    width 210px
    margin: 16px 0;
    font-size 14px
    border: 1px solid #eaecef;
    .avtor
       width 200px
       height 220px
       border-bottom: 1px solid #eaecef;
       color:#999
    .user-detail
      padding 5px
      color #999  
    
     
