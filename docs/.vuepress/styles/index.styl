@import './home.styl'
@import './iconfont/iconfont.styl'
.base
  border-top 1px solid #eaecef
  padding 1.2rem 0
  display flex
  flex-wrap wrap
  align-items flex-start
  align-content stretch
  justify-content space-between
  .item
    height 50px
    padding 20px 40px
    border 1px solid #eaeefb
    justify-items center
    text-align center
    color #1f2f3d
    cursor pointer
    border-radius 5px
    transition 0.3s
    margin-bottom 20px
  .item:hover
    transform scale(1.15)
    background #71b9bb
    color #fff
.icon-style
  font-size 24px
  margin-bottom 8px
  display block
.personal-part
  float right
.part
  border-top 1px solid #eaecef
  padding 20px 0
.hot
  flex 1
  margin 0
  padding-left 0
  margin-right 20px
  border-radius 3px
  padding-right 260px
  .hot-title
    padding-left 10px
    height 40px
    line-height 40px
    font-weight 900
    position relative
    &:before
      content ''
      position absolute
      top 9px
      left 0
      width 5px
      height 23px
      border-radius 4px
      background-image linear-gradient(180deg, #c3e3e347, #45a2a7)
  .item
    background #f4f4f4
    padding-left 10px
    display flex
    cursor pointer
    border 1px solid #eaecef
    justify-content space-between
    padding 16px
    margin-top 20px
    border-radius 8px
  .item:hover
    box-shadow 0px 0px 10px 3px #eaecef
  .date-info
    color rgba(0, 0, 0, 0.45)
    line-height 50px
  a
    color #282c34
  .more
    color #282c34
    padding-left 10px
    font-size 14px
    margin-top 20px
.person-info
  padding 16px
  width 227px
  margin 0
  font-size 14px
  box-shadow 0px 0px 13px 3px #eaecef
  &.day-motto
    background url('/512.jpg') no-repeat center
    color #FFF
  .avtor
    width 80px
    height 80px
    border-radius 40px
    display block
    text-align center
    border-bottom 1px solid #eaecef
    color #999
    margin 0 auto
  .aboutMe
    cursor pointer
    background-color #333
    color #fff
    line-height 2rem
    text-align center
    font-size 14px
    transition all 0.3s ease
  .user-name
    padding 10px
    font-size 16px
    color #333
    text-align center
    font-weight 600
  .user-detail
    position relative
    margin-bottom 10px
    padding 5px
    color #999
    display flex
    align-item center
    justify-content space-evenly
    .poptip
      position absolute
      left 20px
      top 40px
      padding 8px 16px
      box-shadow 0 1px 6px rgb(0 0 0 / 20%)
      &:after
        content ' '
        bottom 1px
        margin-left -7px
        border-bottom-width 0
        border-top-width 7px
        border-top-color #fff
    .person-icon
      cursor pointer
      color #999
      font-size 20px
      &.el-icon-my-qq
        font-size 18px
      &:hover
        color #3eaf7c
  .person-title
    background-image linear-gradient(#c3e3e347, #45a2a7)
    color #fff
    padding-left 10px
    height 40px
    line-height 40px
@media screen and (max-width 719px)
  .part
    display flex
    flex-direction column
    justify-content space-between
  .personal-part
    display flex
    flex-direction column
    margin 0 auto
    margin-bottom 10px
  .hot
    padding-right 0px
.beian
  color #4e6e8e