@import "./home.styl"
@import "./iconfont/iconfont.styl"
.base
    border-top: 1px solid #eaecef;
    padding: 1.2rem 0;
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    align-content: stretch;
    justify-content: space-between;
    .item
        height: 50px;
        padding: 20px 40px;
        border: 1px solid #eaeefb; 
        justify-items: center;
        text-align center;
        color: #1f2f3d;
        cursor: pointer;
        border-radius: 5px;
        transition: 0.3s;
        margin-bottom:20px
    .item:hover{
         transform :scale(1.15);
         background: #71b9bb;
          color: #fff;
        }
.icon-style
      font-size 24px ;
      margin-bottom 8px   ;
      display block ;  
 .part
   display flex;
   justify-content:space-between;
   padding:10px 0
   border-top: 1px solid #eaecef;
   flex-wrap: wrap;
   .hot
     flex 1;
     margin:0;
     padding-left 0;
     margin-right: 20px;
     border: 1px solid #eaecef;
     border-radius 3px
     .hot-title
        background-image: linear-gradient(#c3e3e347, #45a2a7);
        color: #fff;
        padding-left: 10px;
        height: 40px;
        line-height: 40px;
     .item
        padding-left 10px;
        display flex;
        height: 40px;
        line-height: 40px;
        cursor: pointer;
        border-bottom: 1px solid #eaecef;
        justify-content:space-between;
        padding-right 20px;
        .date-info
          color: rgba(0, 0, 0, 0.45);
        a
          color:#282c34;
        :hover{
          color:#3eaf7c;
        }
      .more
          color:#282c34;
          padding-left: 10px;
          font-size 14px;

   .person-info
    padding:16px;
    width 227px;
    margin: 0;
    font-size 14px;
    box-shadow :0px 0px 13px 3px #eaecef;
    .avtor
      width :80px;
      height :80px;
      border-radius: 40px;
      display: block;
      text-align:center;
      border-bottom: 1px solid #eaecef;
      color:#999;
      margin: 0 auto;
     .aboutMe
      cursor: pointer;
      background-color: #333;
      color: #fff;
      line-height: 2rem;
      text-align: center;
      font-size: 14px;
      transition: all .3s ease;
    .user-name
      padding:10px;
      font-size:16px;
      color:#333;
      text-align: center;
      font-weight: 600; 
    .user-detail
      margin-bottom :10px;
      padding: 5px;
      color #999;
      display :flex;
      align-item: center;
      justify-content :space-evenly;
      .person-icon
        cursor: pointer;
        color #999;
        font-size :20px;
        &.el-icon-my-qq
          font-size :18px;
        &:hover
          color #3eaf7c;
    .person-title
      background-image: linear-gradient(#c3e3e347, #45a2a7);
      color: #fff;
      padding-left: 10px;
      height: 40px;
      line-height: 40px; 
    
     
